<script type="text/x-template" id="logTableTmpl">
    <table class="ui selectable striped table logTable">
        <thead>
            <tr>
                <th style="width: 30px">Id</th>
                <th>Message</th>
                <th style="width: 90px">Level</th>
                <th style="width: 230px">Timestamp</th>
            </tr>
        </thead>
        <tbody>
            <log-entry v-for="item in pr_logdata" :pr_entry="item" :key="item.id"></log-entry>
        </tbody>
        <tfoot>
            <tr>
                <th colspan="4">
                    <div class="ui right floated pagination menu">
                        <a class="icon item">
                            <i class="left chevron icon"></i>
                        </a>
                        <a class="item">1</a>
                        <a class="item">2</a>
                        <a class="item">3</a>
                        <a class="item">4</a>
                        <a class="icon item">
                            <i class="right chevron icon"></i>
                        </a>
                    </div>
                </th>
            </tr>
        </tfoot>
    </table>
</script>

<script type="text/x-template" id="logEntryTmpl">
    <tr v-on:click="showDetails">
        <td scope="row" style="width: 30px">{{ pr_entry.id }}</td>
        <td>{{ pr_entry.message }}</td>
        <td style="width: 90px">
            <span class="ui horizontal label" v-bind:class="pr_entry.level | levelClass">{{ pr_entry.level }}</span>
        </td>
        <td style="width: 170px">{{ pr_entry.timestamp | timestampFormatted }}</td>
    </tr>
</script>

<script type="text/x-template" id="logEntryModalTmpl">
    <div class="ui modal small">
        <i class="close icon"></i>
        <div class="header">
            Log Entry
        </div>
        <div class="content">
            <div class="ui form">
                <div class="inline fields">
                    <label style="width:100px">Level</label>
                    <div class="field">
                        <p></p>
                    </div>
                </div>
                <div class="inline fields">
                    <label style="width:100px">Timestamp</label>
                    <div class="field">
                        <p>{{ timestamp}}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="actions">
            <div class="ui right button" onclick="showHideLogDetailModal(false)">Close</div>
        </div>
    </div>
</script>